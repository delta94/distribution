{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "client/*": ["./client/*"]
    }
  },
  "exclude": ["app", "config", "node_modules*", "build"]
}
